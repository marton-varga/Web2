@model FilmViewModel
@{
    ViewData["Title"] = "Film Törlése";
}

<div class="insetContent">
    <p>Biztosan törölni szeretné a filmet?</p>
    <h2>Cím: @Model.Title</h2>
    <br />
    <p>Műfaj: @Model.Style</p>
    <p>Rendező: @Model.Director</p>
    <p>
        Szereplők:
        @for (int i = 0; i < @Model.Actors.Count() - 1; i++)
        {
            <span>@Model.Actors.ElementAt(i) ,</span>
        }
        @if (Model.Actors.Count() > 0)
        {
            <span>@Model.Actors.Last()</span>
        }
    </p>
    <p>Bemutatás éve: @Model.Year</p>
    <p>Adat rögzítve: @Model.Added</p>
    @using (Html.BeginForm("DeleteFilm", "Movies", FormMethod.Post))
    {
        <input type="hidden" name="filmId" value="@Model.Id">
        <input type="submit" value="Igen">
        <button id="cancelButton">Mégsem</button>
    }
</div>

<script>
    function cancelButtonClick(e) {
        e.preventDefault();
        location.href = '/Home';
    }
    document.getElementById("cancelButton").addEventListener('click', cancelButtonClick, false);
</script>